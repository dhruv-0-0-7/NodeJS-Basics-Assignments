<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            text-align: center;
            display: flex;
            flex-direction: column;
            font-family: sans-serif;
        }

        table {
            align-self: center;
        }

        td,
        th {
            width: 200px;
            border: 1px solid black;
            padding: 10px 0;
        }

        #header {
            background-color: black;
            color: white;
            padding: 10px 0;
        }
    </style>
    <title>Document</title>
</head>

<body>
    <%- include ("partials/header") %>
        <h2>User Data</h2>
        <table>
            <thead>
                <th>Id</th>
                <th>Name</th>
                <th>Role</th>
            </thead>
            <% users.forEach(user=> { %>
                <tr>
                    <td>
                        <%= user.id %>
                    </td>
                    <td>
                        <%= user.name %>
                    </td>
                    <td>
                        <%= user.role %>
                    </td>
                </tr>
                <% }) %>
</body>

</html>